<%= form_with(model: task, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <%= form_with(model: task, local: true) do |f| %>
          <%= f.label :content, "タスク" %>
          <%= f.text_field :content %>
          <%= f.label :status, "状態" %>
          <%= f.text_field :status %>
          <%= f.submit "投稿" %>
        <% end %>
      </div>
    </div>
    <%= link_to "一覧に戻る",tasks_path %>
  </div>
<% end %>